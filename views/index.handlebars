<header class="custom-header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-send" aria-hidden="true"></span> Ofek Lan Storage <small>Manage Your Storage</small></h1>
            </div>
            <div class="col-md-2">

                <div class="dropdown create">
                     <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create Content
                        <span class="caret"></span>
                    </button>
                     <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a type="button" data-toggle="modal" data-target="#addItemModal">Add Item</a></li>
                        <li><a href="#">I took item</a></li>
                        {{!--<li><a href="#">Add User</a></li>--}}
                    </ul>
                </div>

            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>Items List</h2>
            <div class="list-group">
                {{# each itemsList}}
                <button type="button" class="list-group-item item-btn" id="{{ this._id }}"> {{ this.name }} <span class="badge"> {{ this.itemModelsCount }} </span></button>
                {{/each}}
            </div>
        </div>

        <div class="col-md-9" id="itemModelsTableDiv">
            <div class="row">
                <h2 style="float: left;">Item Models</h2>
                <input type="text" style="float: right; margin-top:25px; padding-left:20px;" placeholder="Search" id="searchInput"/>
                <span class="glyphicon glyphicon-plus itemModelsElement" id="add-item-to-table"></span>
                <span class="glyphicon glyphicon-ok itemModelsElement" style="float:right; margin-top:30px; margin-right:10px;" id="add-selected-items-to-db"></span>
                <span class="glyphicon glyphicon-remove itemModelsElement" style="float:right; margin-top:30px; margin-right:10px;" id="remove-selected-items-from-db"></span>
            </div>
        </div>

    </div>
</div>

<footer>
    <p>Copyright Daniel Talor, &copy; 2017</p>
</footer>



